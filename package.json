{
  "name": "pier-player",
  "version": "3.1.7",
  "description": "",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npx nuxi dev",
    "build:nuxt": "nuxi build",
    "build": "nuxi generate && electron-builder --win --x64",
    "generate": "nuxi generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "release": "node release.js"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/icon": "^1.15.0",
    "bulma": "^1.0.4",
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "eslint": "^9.36.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "nuxt": "3.6.5",
    "nuxt-electron": "^0.7.0",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue": "^3.4.27",
    "vue-router": "^4.3.2"
  },
  "build": {
    "productName": "PierPlayer",
    "appId": "pier-player",
    "directories": {
      "output": "release"
    },
    "files": [
      ".output/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "icon": "electron/assets/img/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ta-yamazaki",
        "repo": "pier-player"
      }
    ]
  }
}
