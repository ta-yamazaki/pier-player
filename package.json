{
  "name": "pier-player",
  "version": "3.1.0",
  "description": "",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "git tag v$(node -p \"require('./package.json').version\") && git push origin v$(node -p \"require('./package.json').version\")"
  },
  "author": "zakky",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "productName": "PierPlayer",
    "appId": "pier-player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src"
    ],
    "win": {
      "icon": "src/static/img/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
